{
  "version": 2,
  "functions": {
    "api/index.js": {
      "runtime": "@vercel/node@latest",
      "memory": 1024,
      "maxDuration": 15,
      "includeFiles": "public/**"
    }
  },
  "redirects": [
    { "source": "/", "destination": "/api", "permanent": true }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ]
}